{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxFactory": "h",
    "paths": {
      "~/*": ["src/*"],
      "@cp/*": ["src/components/*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest",

      "node",
      "vue/types",
      "@nuxt/vue-app",
      "@nuxtjs/axios"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
